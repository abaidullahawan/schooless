<h1 style="text-align: center;">Educational School System</h1>
<p style="border-bottom: double 4px; "></p>
<table style="width:100vw;">
<th style="text-align:left;border-bottom: 1px solid #000;">ID</th>
<th style="text-align:left;border-bottom: 1px solid #000;">Name</th>
<th style="text-align:left;border-bottom: 1px solid #000;">Father</th>
<th style="text-align:left;border-bottom: 1px solid #000;">Class</th>
<th style="text-align:left;border-bottom: 1px solid #000;">Section</th>
<th style="text-align:left;border-bottom: 1px solid #000;">Phone</th>
<th style="text-align:left;border-bottom: 1px solid #000;">Phone</th>
<% @students.each_with_index do |student,index| %>
  <tr>
    <td style="border-bottom: 1px solid #000;"><%=index+1%></td>
    <td style="border-bottom: 1px solid #000;"><%=student.name%></td>
    <td style="border-bottom: 1px solid #000;"><%=student.father_name%></td>
    <td style="border-bottom: 1px solid #000;"><%= student.class_section.level.name %></td>
    <td style="border-bottom: 1px solid #000;"><%= student.class_section.section.name %></td>
    <td style="border-bottom: 1px solid #000;"></td>
    <td style="border-bottom: 1px solid #000;"></td>
  </tr>
<% end %>
</table>
