<div class="row">
  <div class="col-sm-12"><h1>School Detail</h1></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Logo</strong></div>
  <div class="col-sm-8"><img src='<%= @school.logo.attached? ? url_for(@school.logo) : '' %>' style='height: 250px; width: 250px;'></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Name</strong></div>
  <div class="col-sm-8"><%= @school.name %></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Code</strong></div>
  <div class="col-sm-8"><%= @school.code %></div>
</div>
<br />
<div class="row">
  <div class="col-12"><%= link_to 'Edit', edit_school_path(@school), class: "btn btn-primary" %></div>
</div>
