<div class="row">
  <div class="col-sm-12"><h1>Student Detail</h1></div>
</div>
<br />

<div class="row">
  <div class="col-sm-4"><strong>Name</strong></div>
  <div class="col-sm-8"><%= @student.name %></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Date of Birth</strong></div>
  <div class="col-sm-8"><%= @student.date_of_birth %></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Class</strong></div>
  <div class="col-sm-8"><%= @student.class_section.level.name %></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Section</strong></div>
  <div class="col-sm-8"><%= @student.class_section.section.name %></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Phone No</strong></div>
  <div class="col-sm-8"><%= @student.phone_no %></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Monthly fee</strong></div>
  <div class="col-sm-8"><%= @student.monthly_fee %></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><strong>Address</strong></div>
  <div class="col-sm-8"><%= @student.address %></div>
</div>
<br />
<div class="row">
  <div class="col-sm-4"><%= link_to 'Students', students_path, class: "btn btn-info" %></div>
  <div class="col-sm-2"><%= link_to 'Edit', edit_student_path(@student), class: "btn btn-primary" %></div>
</div>
