<div class="row">
  <div class="col-lg-12 col-sm-12">
    <%= search_form_for @q, url: reports_path, class: "admin-controls", method: "get" do |f| %>
      <div class="col-lg-3 form-group float-left">
        <%= f.select :school_branch_id_eq, options_from_collection_for_select(@school_branches, 'id', 'name', @school_branch_id), {:include_blank => "Select Branch"},:class=>"form-control chosen-select" %>
      </div>
      <div class="col-lg-2 form-group float-left">
        <input class="form-control btn btn-primary" name="search_submit" type="submit" value="Search"></input>
      </div>
    <% end %>
  </div>
</div>

<h3>
  Students:
  <%= link_to 'Active Students', active_student_list_unpaid_students_path(format: :pdf), target: "_blank" %>
  <%= link_to 'Orphon/Deserving Students', deserving_student_list_unpaid_students_path(format: :pdf), target: "_blank" %>
  <%= link_to 'Students List', student_list_unpaid_students_path(format: :pdf), target: "_blank" %>
</h3>
